{
  "compilerOptions": {
    "skipLibCheck": true,
    "sourceMap": false,
    "noImplicitAny": false,
    "module": "commonJS",
    "target": "ES6",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "types": [],
    "declaration": true,
    "outDir": "build",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
  },
  "include": ["src/*"],
  "exclude": [
    "./public",
    "./webpack.config.ts"
  ]
}